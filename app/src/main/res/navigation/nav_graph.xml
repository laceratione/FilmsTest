<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/filmListFragment">

    <fragment
        android:id="@+id/filmListFragment"
        android:name="ru.example.kolsatest.presentation.filmlist.FilmListFragment"

        android:label="Film List Fragment"
        tools:layout="@layout/fragment_film_list">

        <action
            android:id="@+id/action_filmListFragment_to_filmDetailsFragment"
            app:destination="@id/filmDetailsFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
    </fragment>

    <fragment
        android:id="@+id/filmDetailsFragment"
        android:name="ru.example.kolsatest.presentation.filmdetail.FilmDetailsFragment"
        android:label="Film Details Fragment"
        tools:layout="@layout/fragment_film_details">

        <argument
            android:name="film"
            app:argType="ru.example.kolsatest.domain.model.Film" />
    </fragment>

</navigation>