<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingBottom="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView"
            android:layout_width="132dp"
            android:layout_height="201dp"
            android:layout_gravity="center"
            android:layout_marginVertical="24dp"
            android:background="@color/gray_200"
            android:contentDescription="@string/image_view_description"
            android:scaleType="center"
            app:shapeAppearanceOverlay="@style/roundedImageView" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_vertical"
                android:letterSpacing="0.003847"
                android:lineSpacingExtra="6sp"
                android:textColor="@color/black"
                android:textSize="26sp"
                tools:text="Название фильма" />

            <TextView
                android:id="@+id/tv_genreAndYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:letterSpacing="0.00625"
                android:lineSpacingExtra="4sp"
                android:textColor="@color/gray_700"
                android:textSize="16sp"
                tools:text="драма, 2017 год" />

            <LinearLayout
                android:id="@+id/llRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_rating_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:letterSpacing="0.004167"
                    android:textColor="@color/primary_500"
                    android:textSize="24sp"
                    tools:text="6.7" />

                <TextView
                    android:id="@+id/tv_rating_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/roboto_medium"
                    android:letterSpacing="0.00625"
                    android:text="@string/service_name"
                    android:textColor="@color/primary_500"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/roboto_regular"
                android:letterSpacing="0.007143"
                android:lineSpacingExtra="6sp"
                android:scrollbars="vertical"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:text="Описание" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>